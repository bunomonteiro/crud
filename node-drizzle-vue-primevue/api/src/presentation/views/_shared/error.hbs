<style>
  .error .box { position: absolute; left: 50%; top: 50%; transform: translate(-50%, -50%) }
  .error .box .status { 
    font-size: 200px; 
    text-align: center; 
    letter-spacing: 20px; 
    font-weight: 700;
	  -webkit-text-stroke: 1px #F8F8F8;
	  text-shadow: 0px 1px 4px #F8F8F8;
  }
  .error .box .message { text-align: center; font-size: 16px; }
</style>
<div class="error">
  <div class="box">
    {{#if error}}
    <h1 class="status">
      {{error.status}}
    </h1>
    {{/if}}
    <p class="message">
      {{message}}
      {{#if error}}
      <br>
      <small><em>CÃ³digo do erro: {{error.code}}</em></small>
      {{/if}}
    </p>
    {{#if development}}
      <hr>
      <small>
        <pre>{{error.originalError.stack}}</pre>
      </small>
    {{/if}}
  </div>
</div>